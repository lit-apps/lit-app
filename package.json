  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@types/mocha": "^10.0.1",
    "eslint": "^8.40.0",
    "mocha": "^10.3.0",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "wireit": "^0.14.4"
  },
  "wireit": {
    "test": {
      "command": "wireit"
    },
    "build": {
      "dependencies": [
        "./packages/state:build"
      ]
    }
  }
